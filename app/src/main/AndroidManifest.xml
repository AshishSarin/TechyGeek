<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sareen.squarelabs.techygeek">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.TechyGeekActivity"
            android:label="@string/title_activity_techy_geek"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.HomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.NewsDetailActivity"
            android:parentActivityName=".ui.HomeActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.HomeActivity" />

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sareen.squarelabs.techygeek.ui.HomeActivity" />
        </activity>
        <activity
            android:name=".ui.NewsSavedActivity"
            android:label="Downloads">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity" />
        </activity>

        <provider
            android:name=".data.TechyGeekProvider"
            android:authorities="com.sareen.squarelabs.techygeek.provider" />

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>